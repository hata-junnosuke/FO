<h1>New Product</h1>

<%= form_with model: @form, url: products_path, method: :post do |fb| %>
  <%= render 'shared/error_message', object: fb.object %>

  <table class="table">
    <thead>
    <tr>
      <th>登録</th>
      <th>商品コード</th>
      <th>商品名</th>
      <th>販売価格</th>
    </tr>
    </thead>
    <tbody class="bulk-registration-form">
    # fields_forはform_with内で渡したモデルとは異なるモデルを編集できるようにするメソッド
    <%= fb.fields_for :products do |f| %>
      <tr class="item">
        <td class="text-center">
          <%= f.check_box :availability, class: 'top10 registration-checkbox' %>
        </td>
        <td>
          <%= f.text_field :code, class: 'form-control' %>
        </td>
        <td>
          <%= f.text_field :name, class: 'form-control' %>
        </td>
        <td>
          <%= f.text_field :price, class: 'form-control' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= fb.submit '一括登録', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', products_path %>
